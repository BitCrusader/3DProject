<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:sys="clr-namespace:System;assembly=netstandard"
        x:Class="Engine.Frontend.DefaultTheme">

	<Style>
		<Style.Resources>
			<FontFamily x:Key="IconsFont">avares://Engine/Frontend/Assets/Fonts/MaterialIcons-Regular.ttf#Material Icons</FontFamily>
			<FontFamily x:Key="IconsFont2">avares://Engine/Frontend/Assets/Fonts/MaterialIconsOutlined-Regular.otf#Material Icons Outlined</FontFamily>

			<Color x:Key="WindowBackgroundColor">#1A191A</Color>
			<Color x:Key="ToolBackgroundColor">#38393C</Color>
			<Color x:Key="ControlBackgroundColor">#201F21</Color>
			<Color x:Key="ControlForegroundColor">#C6C5C4</Color>

			<Color x:Key="ThemeAccentColor">#3472E6</Color>
			<Color x:Key="HighlightColor">#FFFFFF</Color>

			<Color x:Key="ThemeBackgroundColor">#1A1A1A</Color>

			<Color x:Key="ThemeControlHighlightLowColor">#A8A8A8</Color>
			<Color x:Key="ThemeControlHighlightMidColor">#828282</Color>
			<Color x:Key="ThemeControlHighlightHighColor">#505050</Color>
			<Color x:Key="ThemeForegroundColor">#D4D4D4</Color>
			<Color x:Key="ThemeForegroundMidColor">#CFD4D4D4</Color>
			<Color x:Key="ThemeForegroundLowColor">#808080</Color>

			<Color x:Key="ErrorColor">#FF0000</Color>
			<Color x:Key="ErrorLowColor">#10FF0000</Color>

			<SolidColorBrush x:Key="ThemeBackgroundBrush" Color="{StaticResource ControlBackgroundColor}"/>
			<SolidColorBrush x:Key="ThemeControlMidHighBrush" Color="{DynamicResource ThemeControlMidHighColor}"/>
			<SolidColorBrush x:Key="ThemeForegroundMidBrush" Color="{DynamicResource ThemeForegroundMidColor}"/>

			<SolidColorBrush x:Key="HighlightBrush" Color="{DynamicResource ThemeAccentColor}"/>
			<SolidColorBrush x:Key="HighlightForegroundBrush" Color="{DynamicResource HighlightColor}"/>
			<SolidColorBrush x:Key="ThemeAccentBrush2" Color="{DynamicResource ThemeAccentColor}"/>
			<SolidColorBrush x:Key="ThemeAccentBrush3" Color="{DynamicResource ThemeAccentColor}"/>
			<SolidColorBrush x:Key="ThemeAccentBrush4" Color="{DynamicResource ThemeAccentColor}"/>

			<sys:Double x:Key="FontSizeLarge">13</sys:Double>
		</Style.Resources>
	</Style>

	<StyleInclude Source="avares://Engine/Frontend/Assets/Styles/Button.axaml"/>
	<StyleInclude Source="avares://Engine/Frontend/Assets/Styles/CheckBox.axaml"/>
	<StyleInclude Source="avares://Engine/Frontend/Assets/Styles/MenuItem.axaml"/>
	<StyleInclude Source="avares://Engine/Frontend/Assets/Styles/TextBox.axaml"/>
	<StyleInclude Source="avares://Engine/Frontend/Assets/Styles/Expander.axaml"/>
	<StyleInclude Source="avares://Engine/Frontend/Assets/Styles/Window.axaml"/>
</Styles>
