<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Engine.Frontend">

  <Style Selector="controls|NumInput">
	<Setter Property="Icon" Value="&#xF1B9;"/>
	<Setter Property="IconForeground" Value="#E6E62E"/>
	<Setter Property="IconBackground" Value="#19E6E62E"/>
	  
    <Setter Property="Template">
      <ControlTemplate>
		<Border CornerRadius="4" Background="{StaticResource ControlBackgroundColor}" Padding="1">
			<Grid ColumnDefinitions="auto, *">
				<Border Background="{TemplateBinding IconBackground}" Width="20" MinHeight="20" VerticalAlignment="Stretch" CornerRadius="3, 0, 0, 3">
					<TextBlock Text="{TemplateBinding Icon}" FontSize="14" FontFamily="{StaticResource IconsFont}" Foreground="{TemplateBinding IconForeground}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
				</Border>
				<TextBox x:Name="PART_TextBox" Grid.Column="1" Padding="4, 0" VerticalContentAlignment="Center" Text="{TemplateBinding ValueProxy, Mode=TwoWay}" Foreground="{StaticResource ThemeForegroundMidBrush}"/>
			</Grid>
		</Border>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
