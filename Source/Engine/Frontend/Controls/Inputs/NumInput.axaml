<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Engine.Frontend">

  <Style Selector="controls|NumInput">
    <Setter Property="Template">
      <ControlTemplate>
		<Border CornerRadius="2" Background="{StaticResource ControlBackgroundColor}" Padding="1">
			<Grid ColumnDefinitions="auto, *">
				<Panel Background="#19E6E62E" Width="18" VerticalAlignment="Stretch">
					<TextBlock Text="{TemplateBinding Icon}" FontSize="13" FontFamily="{StaticResource IconsFont}" Foreground="#E6E62E" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
				</Panel>
				<TextBox x:Name="PART_TextBox" Grid.Column="1" Padding="4, 0" VerticalContentAlignment="Center" Text="{TemplateBinding ValueProxy, Mode=TwoWay}" Foreground="{StaticResource ThemeForegroundMidBrush}"/>
			</Grid>
		</Border>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
