<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Engine.Frontend">

  <Style Selector="controls|ResourceInput">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
		<Border CornerRadius="2" Background="{StaticResource ControlBackgroundColor}" Padding="1">
			<Grid ColumnDefinitions="auto, *">
				<Panel Background="#19E6E62E" Width="16" Height="16">
					<TextBlock Text="&#xE3DC;" FontSize="13" FontFamily="{StaticResource IconsFont}" Foreground="#E6E62E" VerticalAlignment="Center" HorizontalAlignment="Center"/>
				</Panel>
				<TextBlock Grid.Column="1" Padding="4, 0" VerticalAlignment="Center" Text="{TemplateBinding ValueText}" Foreground="{StaticResource ThemeForegroundMidBrush}" TextTrimming="CharacterEllipsis"/>
			</Grid>
		</Border>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
